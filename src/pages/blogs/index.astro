---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
---

<BaseLayout title="my blogs">
  <section class="container-full mt-16">
    <div class=""></div>

    {
      posts
        .filter((post) => post.slug)
        .map((post) => (
          <a href={`/blogs/${post.slug}`} class="anchor flex flex-col">
            <span class="line-clamp-1">{post.data.title}</span>
            <span class="line-clamp-1 text-sm opacity-50">posted on {post.data.date.toLocaleDateString()}</span>
          </a>
        ))
    }
  </section>
</BaseLayout>
