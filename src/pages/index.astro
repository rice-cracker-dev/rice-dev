---
import { Icon } from 'astro-icon/components';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<script>
  import Typed from 'typed.js';

  new Typed(document.getElementById('hero-header'), {
    strings: ['hello.'],
    typeSpeed: 50,
  });
</script>

<BaseLayout title="rice-dev" navbarFixed>
  <div class="flex min-h-svh flex-col justify-center gap-16">
    <section class="container-full">
      <div class="flex flex-col items-center gap-4 text-center md:max-w-[50%] md:items-start md:text-left">
        <h1 class="text-4xl">
          <span id="hero-header"></span>
        </h1>
        <p class="opacity-75">this is my personal portfolio/blog page.</p>
        <div class="mt-8 flex gap-4">
          <a href="/" class="btn btn-accent">about me</a>
          <a href="https://github.com/rice-cracker-dev" target="_blank" class="btn btn-neutral">
            <Icon name="fa6-brands:github" />
            <span>my github</span>
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
